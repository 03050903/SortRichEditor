<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 富文本编辑器 -->
    <com.hitomi.sortricheditor.view.SortRichEditor
        android:id="@+id/richEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/title"
        android:background="#fff" />

    <!-- 底部的按钮 -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1">

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:background="@mipmap/icon_gallery"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_gallery"
            android:background="@mipmap/icon_camera"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_posts"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="#4ca4e9"
            android:text="发表"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>